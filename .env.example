# Hedge Fund Trading Platform - Environment Configuration

# ==========================================
# APPLICATION SETTINGS
# ==========================================

# Environment (development, staging, production)
ENV=development
ENVIRONMENT=development

# Paper Trading Mode (ALWAYS start with true)
PAPER_TRADING=true

# Debug mode
DEBUG=true

# Application URL
APP_URL=http://localhost:3000

# API URL
API_URL=http://localhost:8000

# WebSocket URL
WS_URL=ws://localhost:8000

# Total Capital (USD)
TOTAL_CAPITAL=100000

# ==========================================
# DATABASE CONFIGURATION
# ==========================================

# Supabase Configuration (Primary Database)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# PostgreSQL (Local/Bakup Database)
DATABASE_URL=postgresql://postgres:password@localhost:5432/hedge_fund_db

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# ==========================================
# MARKET DATA PROVIDERS
# ==========================================

# CoinGecko API (REQUIRED for market data)
COINGECKO_API_KEY=your-coingecko-key

# CoinMarketCap API (REQUIRED for market data)
CMC_API_KEY=your-cmc-key

# Binance API (for market data)
BINANCE_API_KEY=your-binance-key
BINANCE_SECRET_KEY=your-binance-secret

# Coinbase API (for market data)
COINBASE_API_KEY=your-coinbase-key
COINBASE_API_SECRET=your-coinbase-secret

# Kraken API (for market data)
KRAKEN_API_KEY=your-kraken-key
KRAKEN_API_SECRET=your-kraken-secret

# ==========================================
# TRADING EXCHANGE API KEYS
# ==========================================

# Live Trading APIs (Use with extreme caution)
BINANCE_TRADING_KEY=your-trading-key
BINANCE_TRADING_SECRET=your-trading-secret

COINBASE_TRADING_KEY=your-trading-key
COINBASE_TRADING_SECRET=your-trading-secret

# ==========================================
# SECURITY CONFIGURATION
# ==========================================

# JWT Secret Key (Generate a strong random key)
JWT_SECRET_KEY=your-super-secure-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Settings
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:8000"]
ALLOWED_HOSTS=["localhost", "127.0.0.1"]

# ==========================================
# MONITORING & LOGGING
# ==========================================

# Sentry (Error Monitoring)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Log Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# ==========================================
# EXTERNAL SERVICES
# ==========================================

# Email Service (SendGrid, AWS SES, etc.)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Slack/Discord Webhooks for alerts
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# ==========================================
# RISK MANAGEMENT LIMITS
# ==========================================

# Maximum position sizes (as percentage of portfolio)
MAX_POSITION_SIZE=0.1
MAX_CRYPTO_POSITION_SIZE=0.05

# Risk limits
MAX_PORTFOLIO_VAR=0.05  # 5% maximum VaR
MAX_DAILY_LOSS=0.02     # 2% maximum daily loss

# ==========================================
# COMPLIANCE SETTINGS
# ==========================================

# SEC Reporting
SEC_REPORTING_ENABLED=true
CPO_PQR_REPORTING_ENABLED=true

# KYC/AML Settings
KYC_REQUIRED=true
AML_MONITORING_ENABLED=true

# ==========================================
# PERFORMANCE & OPTIMIZATION
# ==========================================

# Cache TTL settings (seconds)
PRICE_CACHE_TTL=300
ORDERBOOK_CACHE_TTL=30
SENTIMENT_CACHE_TTL=3600

# Rate limiting
API_RATE_LIMIT=1000  # requests per minute

# ==========================================
# DEPLOYMENT SPECIFIC
# ==========================================

# Docker Compose Settings
GRAFANA_PASSWORD=admin
REDIS_PASSWORD=your-redis-password

# AWS/GCP/Azure Configuration (for cloud deployment)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key

# ==========================================
# DEVELOPMENT SETTINGS
# ==========================================

# Mock Data (set to false in production)
USE_MOCK_DATA=true

# Test Mode (set to false in production)
TEST_MODE=true

# ==========================================
# BACKUP & RECOVERY
# ==========================================

# Database backup settings
DB_BACKUP_ENABLED=true
DB_BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM

# Log retention (days)
LOG_RETENTION_DAYS=90

# ==========================================
# ADVANCED FEATURES
# ==========================================

# Machine Learning Settings
ENABLE_ML_MODELS=true
MODEL_UPDATE_INTERVAL=3600  # 1 hour

# High-Frequency Trading
HFT_ENABLED=false
MIN_ORDER_SIZE=0.001

# Cross-Asset Strategies
CROSS_ASSET_TRADING_ENABLED=true

# ==========================================
# COMPLIANCE REPORTING
# ==========================================

# Form PF Reporting
FORM_PF_REPORTING_ENABLED=true
FORM_PF_FREQUENCY=quarterly  # monthly, quarterly, annual

# CPO-PQR Reporting
CPO_PQR_REPORTING_ENABLED=true
CPO_PQR_FREQUENCY=quarterly

# ==========================================
# ALERTING & NOTIFICATIONS
# ==========================================

# Telegram Alerts (RECOMMENDED)
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-telegram-chat-id

# Risk Alert Thresholds
VAR_ALERT_THRESHOLD=0.03
LOSS_ALERT_THRESHOLD=0.01

# Email Alerts
ADMIN_EMAIL=admin@hedgefund.com
CIO_EMAIL=cio@hedgefund.com

# ==========================================
# EXPERIMENTAL FEATURES
# ==========================================

# AI Strategy Optimization
AI_STRATEGY_OPTIMIZATION_ENABLED=false

# Quantum Computing Integration (future)
QUANTUM_COMPUTING_ENABLED=false

# Decentralized Exchange Integration
DEX_INTEGRATION_ENABLED=false
