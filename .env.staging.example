# ==========================================
# STAGING ENVIRONMENT CONFIGURATION
# ==========================================
# Copy this to .env.staging and fill in real values
# Staging should mirror production but with test data

# ==========================================
# CORE SETTINGS
# ==========================================

NODE_ENV=staging
VITE_ENV=staging

# Safety Settings - Always paper trading in staging
PAPER_TRADING=true
DEBUG=true

# Application URLs
VITE_APP_URL=https://staging.your-domain.com
VITE_API_URL=https://api-staging.your-domain.com
VITE_WS_URL=wss://api-staging.your-domain.com

# ==========================================
# DATABASE (Supabase Staging)
# ==========================================
# Use a separate Supabase project for staging!

VITE_SUPABASE_URL=https://your-staging-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-staging-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-staging-service-role-key

# ==========================================
# SECURITY
# ==========================================

JWT_SECRET=staging-jwt-secret-min-32-characters-long
COINGECKO_API_KEY=your-coingecko-key
CMC_API_KEY=your-cmc-key

# ==========================================
# MONITORING
# ==========================================

VITE_SENTRY_DSN=https://your-staging-sentry-dsn@sentry.io/project
SENTRY_ENVIRONMENT=staging

# ==========================================
# RISK LIMITS (Conservative for staging)
# ==========================================

MAX_POSITION_SIZE_USD=100
MAX_DAILY_LOSS_USD=50
MAX_LEVERAGE=1.0
MAX_PORTFOLIO_RISK=0.01

# ==========================================
# FEATURE FLAGS
# ==========================================

ENABLE_LIVE_TRADING=false
ENABLE_LEVERAGE=false
ENABLE_MARGIN=false
ENABLE_DERIVATIVES=false

# ==========================================
# DEPLOYMENT
# ==========================================

PORT=8000
HOST=0.0.0.0
CORS_ORIGINS=https://staging.your-domain.com

# ==========================================
# CACHE (Staging Redis)
# ==========================================

REDIS_URL=redis://staging-redis:6379
CACHE_TTL=60

# ==========================================
# LOGGING (Verbose for debugging)
# ==========================================

LOG_LEVEL=debug
LOG_FORMAT=json

