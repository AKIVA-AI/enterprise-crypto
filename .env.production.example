# ==========================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# ==========================================
# Copy this to .env.production and fill in real values
# NEVER commit .env.production to git!

# ==========================================
# CORE SETTINGS
# ==========================================

# Environment
NODE_ENV=production
VITE_ENV=production

# Safety Settings
PAPER_TRADING=true  # Start in paper trading mode!
DEBUG=false

# Application URLs
VITE_APP_URL=https://your-domain.com
VITE_API_URL=https://api.your-domain.com
VITE_WS_URL=wss://api.your-domain.com

# ==========================================
# DATABASE (Supabase Production)
# ==========================================

VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-production-anon-key

# Backend uses service role key (not exposed to frontend)
SUPABASE_SERVICE_ROLE_KEY=your-production-service-role-key

# ==========================================
# SECURITY
# ==========================================

# JWT Secret (generate with: openssl rand -hex 32)
JWT_SECRET=your-production-jwt-secret-min-32-chars

# API Keys (for backend only)
COINGECKO_API_KEY=your-production-coingecko-key
CMC_API_KEY=your-production-cmc-key

# ==========================================
# MONITORING & ALERTS
# ==========================================

# Sentry (Error Tracking)
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_AUTH_TOKEN=your-sentry-auth-token

# Telegram Alerts
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-telegram-chat-id

# ==========================================
# RISK LIMITS (Production)
# ==========================================

MAX_POSITION_SIZE_USD=500  # Start small!
MAX_DAILY_LOSS_USD=100
MAX_LEVERAGE=1.0  # No leverage initially
MAX_PORTFOLIO_RISK=0.02  # 2% max risk

# ==========================================
# RATE LIMITING
# ==========================================

API_RATE_LIMIT=100  # requests per minute
MAX_CONCURRENT_ORDERS=5

# ==========================================
# FEATURE FLAGS
# ==========================================

ENABLE_LIVE_TRADING=false  # Keep false until ready!
ENABLE_LEVERAGE=false
ENABLE_MARGIN=false
ENABLE_DERIVATIVES=false

# ==========================================
# DEPLOYMENT
# ==========================================

# Northflank/Vercel/Railway specific
PORT=8000
HOST=0.0.0.0

# CORS Origins (comma-separated)
CORS_ORIGINS=https://your-domain.com,https://www.your-domain.com

# ==========================================
# LOGGING
# ==========================================

LOG_LEVEL=info  # error, warn, info, debug
LOG_FORMAT=json  # json or text

# ==========================================
# CACHE
# ==========================================

REDIS_URL=redis://your-redis-host:6379
REDIS_PASSWORD=your-redis-password
CACHE_TTL=300  # 5 minutes

# ==========================================
# BACKUP
# ==========================================

# Backup database URL (optional)
BACKUP_DATABASE_URL=postgresql://user:pass@backup-host:5432/db

# ==========================================
# NOTES
# ==========================================
# 1. Start with PAPER_TRADING=true
# 2. Keep position limits small ($500 max)
# 3. Monitor for 7 days before enabling live trading
# 4. Set up alerts before going live
# 5. Have rollback plan ready

